<% user = @user %>
<%= form_with scope: :user, url: users_path, local: true do |form| %>
  <div class="container">
  <div class="create-event">
  <div class="row">
    <div class="col-md-12">
      <div class="section-heading">            
        <br>
        <br>
      </div>
    </div>
        
        <div class="col-md-12">
        <div class="section-heading">
      <h2>Crea un usuario</h2>
      <p>Para confirmar tu asistencia</p>
    </div>
    </div>

    
    <div class="create-event">
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            
          </div>
          <div class="col-md-8">
            <div class="event-form">
              <form id="event" action="" method="post">
                <div class="row">
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <h6>Inserta tu nombre</h6>
                    <fieldset>
                      <%= form.text_field :full_name, type:"text", class:"form-control", placeholder:"Juán Pérez" %>
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <h6>Cuál es tu fecha de nacimiento?</h6>
                    <fieldset>
                      <%= form.text_field :birth, type:"date", class:"form-control", placeholder:"Date" %>
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <h6>Cuál es tu género?</h6>
                    <fieldset>
                      <%= form.select :category, ['Masculino', 'Femenino','No binario','Otro / Prefiero no decir'], placeholder:"Evento" %>
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                  <h6>Danos tu email</h6>
                  <fieldset>
                    <%= form.text_field :email, type:"text", class:"form-control", placeholder:"fin@fintual.com" %>
                  </fieldset>
                </div>
                  
                 
                  <br><br>
                  <div class="col-lg-12">
                    <fieldset>
                      <button type="submit" id="form-submit" class="filled-button">Enviar</button>
                    </fieldset>
                  </div>
                </div>
                </div>
              </form>
            </div>
          </div>

        </div>
      </div>
  

    <footer>
      <div class="container">
        <div class="row">
