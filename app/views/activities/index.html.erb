
<head>

<meta charset="utf-8">
<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
<meta name="description" content="">
<meta name="author" content="">
<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">

<title>Sportivo for FIN</title>

</head>

<body>

<!-- Header -->
<header class="">
  <nav class="navbar navbar-expand-lg">
    <div class="container">
      <a class="navbar-brand" href="#"><h2>Sportivo <em>for Fin</em></h2></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <%= link_to "Home", root_path, class:"nav-link"%>
          </li> 
          <li class="nav-item">
          <%= link_to "Join an event", activities_path, class: "nav-link"%>
          </li>
          <li class="nav-item">
          <%= link_to "Post an event", new_activity_path, class:"nav-link" %>
          </li>
          <li class="nav-item">
              <%= link_to "Create user", new_user_path, class:"nav-link" %>
          </li>
        </ul>
      </div>
    </div>
  </nav>
</header>

<p style="color: green"><%= notice %></p>
<div class="banner header-text">
        <div class="banner-item-01">
          <div class="text-content">
            <h4>at Puerto Natales</h4>
            <h2>Join your Next Adventure</h2>
          </div>
        </div>
    </div>
    
    <div class="events">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="filters">
            <ul>
                <li class="active" data-filter="*">All Events</li>
            </ul>
          </div>
        </div>
        <div class="col-md-12">
          <div class="filters-content">
              <div class="row grid">
                  
  <% @activities.each do |activity| %>
    <div id="<%= dom_id activity %>" class="col-lg-4 col-md-4 all sports">
      <div class="event-item">
      <%= image_tag (activity.category + ".jpg"), class: "img-responsive"%>
        <div class="down-content">
        <h4><%= link_to activity.title, activity %></h4>
        <p>
        <strong>Creator:</strong>
        <%= activity.creator %>
        </p>
        <p>
        <strong>Datetime:</strong>
        <%= activity.datetime.strftime("%-d/%-m/%y: %H:%M") %>
        </p>
        </div>
      </div>
    </div>

  <% end %>
  </div>
  </div>
</div>



<footer>
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="inner-content">
          <p>Copyright &copy; 2022 SPORTIVO CO., LTDA.
        
        - Design: <a rel="nofollow noopener" href="https://templatemo.com" target="_blank">TemplateMo</a></p>
        </div>
      </div>
    </div>
  </div>
</footer>



