<%= render "navbar" %>

<% activity = @activity %>
<%= form_with scope: :activity, url: activities_path, local: true do |form| %>
  
  <div class="container">
  <div class="create-event">
  <div class="row">
    <div class="col-md-12">
      <div class="section-heading">            
        <br>
        <br>
      </div>
    </div>
        
        <div class="col-md-12">
        <div class="section-heading">
      <h2>Crea un evento</h2>
      <p>Para que otras personas puedan unirse</p>
    </div>
    </div>
          <div class="col-md-8">
            <div class="event-form">
              <form id="event" action="" method="post">
                <div class="row">
                  <div class="col-sm-12">
                    <h6>Inserta tu nombre</h6>
                    <fieldset>
                      <%= form.text_field :creator, type:"text", class:"form-control", placeholder:"Juán Pérez" %>
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <h6>¿Cómo se llamará tu actividad?</h6>
                    <fieldset>
                      <%= form.text_field :title, type:"text", class:"form-control", placeholder:"Trekking bacán" %>
                    </fieldset>
                  </div>
                  <br><br>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <h6>Escribe una breve descripción</h6>
                    <fieldset>
                      <%= form.text_area :description, type:"text", size: "70x5", class:"form-control", placeholder:"Vamos a hacer trekking" %>
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <h6>¿Cuándo será?</h6>
                    <fieldset>
                      <%= form.text_field :datetime, 
                      type:"datetime-local", 
                      class:"form-control", 
                        placeholder:"23-08-2022 09:00" %>
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <h6>Ubicación</h6>
                    <fieldset>
                      <%= form.text_field :location, type:"text", class:"form-control", placeholder:"En la punta del cerro" %>
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <h6>¿Cuántos cupos hay para la actividad?</h6>
                    <fieldset>
                      <%= form.text_field :places, type:"integer", class:"form-control", placeholder:"#" %>
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <h6>¿Tiene algún costo?</h6>
                    <fieldset>
                      <%= form.text_field :price, type:"integer", class:"form-control", placeholder:"$$" %>
                    </fieldset>
                  </div>
                  <div class="col-lg-12 col-md-12 col-sm-12">
                    <h6>Elige la categoría</h6>
                    
                    <fieldset>
                      <%= form.select :category, ['Trekking', 'Running', 'Futbol', 'Escalada', 'Triatlon'], placeholder:"Evento" %>
                    </fieldset>
                    <br>
                  </div>
                  <br><br>
                  <div class="col-lg-12">
                    <fieldset>
                      <button type="submit" id="form-submit" class="filled-button">Enviar</button>
                    </fieldset>
                  </div>
                </div>
                </div>
              </form>
            </div>
          </div>

  

    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-12">
            <div class="inner-content">
              <p>Copyright &copy; 2022 SPORTIVO CO., LTDA.
            
            - Design: <a rel="nofollow noopener" href="https://templatemo.com" target="_blank">TemplateMo</a></p>
            </div>
          </div>
        </div>
      </div>
    </footer>


    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>


    <!-- Additional Scripts -->
    <script src="assets/js/custom.js"></script>
    <script src="assets/js/owl.js"></script>
    <script src="assets/js/slick.js"></script>
    <script src="assets/js/isotope.js"></script>
    <script src="assets/js/accordions.js"></script>


    <script language = "text/Javascript"> 
      cleared[0] = cleared[1] = cleared[2] = 0; //set a cleared flag for each field
      function clearField(t){                   //declaring the array outside of the
      if(! cleared[t.id]){                      // function makes it static and global
          cleared[t.id] = 1;  // you could use true and false, but that's more typing
          t.value='';         // with more chance of typos
          t.style.color='#fff';
          }
      }
    </script>


  </body>
<% end %>
